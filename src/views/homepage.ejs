    <h1>List User</h1>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>Id</th>
          <th>Email</th>
          <th>Name</th>
          <th>City</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% listUser.forEach(function(user,index) { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.name %></td>
          <td><%= user.city %></td>
          <td>
            <button><a href="/update/<%= user.id %>">Edit</a></button>
            <form action="/deleteUser/<%= user.id %>" method="post">
              <button>Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
